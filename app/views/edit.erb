<h1>Edit the recipe</h1>
<form action="/recipes/<%= @recipe.id %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <label for="name">Name: </label>
  <input type="text" name="name" placeholder="<%= @recipe.name %>"><br><br>

  <label for="ingredients">Ingredients: </label>
  <input type="text" name="ingredients" Placeholder="<%= @recipe.ingredients %>"><br><br>

  <label for="cook'">Cook Time: </label>
  <input type="text" name="cook_time" placeholder="<%=@recipe.cook_time %>"><br><br>

  <input id="submit" type="submit" name="submit" value="Save Changes"><br><br>


</form>
